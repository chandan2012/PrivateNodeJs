
  <body>
    <%- include('../partials/nav') %>
    <div
      class="flex flex-col items-center justify-center min-h-screen bg-gray-100"
    >
      <h1 class="text-4xl font-bold text-orange-600 mb-4">
        <%= editing ? 'Edit' : 'Add'%>  House</h1>
          <form action="/<%= editing ? "edit-home" : "add-home" %>" method="post" class="flex flex-col items-center m-0">
            <input hidden type="text" name="id" value="<%= editing ? Homes._id : '' %>">            
          <input
            type="text"
            name="houseName"
            value="<%= editing ? Homes.houseName : '' %>"
            placeholder="Name of House"           
            class="px-4 py-2 border border-gray-300 rounded mb-4"
          />
          <input
            type="text"
            name="price"
            value="<%= editing ? Homes.price : '' %>"
            placeholder="Price of House"          
            class="px-4 py-2 border border-gray-300 rounded mb-4"
          />
          <input
            type="text"
            name="location"
            value="<%= editing ? Homes.location : '' %>"
            placeholder="Location of House"
            class="px-4 py-2 border border-gray-300 rounded mb-4"
          />
          <input
            type="text"
            name="rating"
            value="<%= editing ? Homes.rating : '' %>"
            placeholder="Rating of House"          
            class="px-4 py-2 border border-gray-300 rounded mb-4"
          />
          <input
            type="text"
            name="photoUrl"
            value="<%= editing ? Homes.photoUrl : '' %>"
            placeholder="Enter photo URL"
            class="px-4 py-2 border border-gray-300 rounded mb-4"
          />
          <textarea
          name="description"
          placeholder="Describe your house"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          rows="4"><%= editing ? Homes.description : '' %></textarea>
          <input
            type="submit"
            value=" <%= editing ? 'Update' : 'Add' %> Home"
            class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300"
          />
        </form>        
    </div>
  </body>
</html>
