<%- include('../partials/head') %>
  </head>
  
  <body>
    <%- include('../partials/nav') %>
       <main class="h-screen flex justify-center items-center bg-gray-100">
  <div class="max-w-md w-full mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-lg font-bold mb-4">Sign Up</h2>
    
    
    <form action="/signup" method="post">
      <% if (typeof errorsMsg !== 'undefined' && errorsMsg && errorsMsg.length > 0) { %>
        <div class="bg-red-100 border mb-4 border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <ul class="list-disc list-inside space-y-2">
            <% errorsMsg.forEach(error => { %>
              <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
    
      <div class="mb-4">
        <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
        <input name="username" value="<%= typeof oldInput !== 'undefined' ? oldInput.username : '' %>" id="username" type="text" placeholder="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      </div>
    
      <div class="mb-4">
        <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
        <input name="email" value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>" id="email" type="email" placeholder="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      </div>
    
      <div class="mb-4">
        <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
        <input name="password" value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>" id="password" type="password" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      </div>
    
      <div class="mb-4">
        <label for="confirm_password" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
        <input name="confirm_password" value="<%= typeof oldInput !== 'undefined' ? oldInput.confirm_password : '' %>" id="confirm_password" type="password" placeholder="Confirm Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      </div>
    
      <label for="userType" class="block text-gray-700 text-sm font-bold mb-2">User Type</label>
      <div class="flex items-center mb-4">
        <input type="radio" id="admin" name="userType" value="admin" class="mr-2" <%= typeof oldInput !== 'undefined' && oldInput.userType === 'admin' ? 'checked' : '' %> />
        <label for="admin">Admin</label>
    
        <input type="radio" id="user" name="userType" value="user" class="mr-2 ml-4" <%= typeof oldInput !== 'undefined' && oldInput.userType === 'user' ? 'checked' : '' %> />
        <label for="user">User</label>
      </div>
    
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Sign Up</button>
        <a href="/login" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Already have an account?</a>
      </div>
    </form>
    
  </div>
</main>
</body>
</html>